<h1 class="text-xl font-bold text-indigo-900 mb-4">Book Your Flight</h1>
<div class="divide-y divide-gray-200 overflow-hidden rounded-lg bg-white shadow mb-4">
  <div class="px-4 py-4 sm:px-6">
    <h2 class="text-lg font-semibold text-gray-800">Flight Info</h2>
  </div>
  <div class="px-4 py-4 sm:p-6">
    <dl class="mt-2 grid grid-cols-1 gap-5 md:grid-cols-4">
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-xs font-medium text-gray-500">Departing From</dt>
        <dd class="mt-1 text-lg font-semibold tracking-tight text-gray-900"><%= "#{@flight.departure_airport.city} (#{@flight.departure_airport.code})" %></dd>
      </div>
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-xs font-medium text-gray-500">Arriving To</dt>
        <dd class="mt-1 text-lg font-semibold tracking-tight text-gray-900"><%= "#{@flight.arrival_airport.city} (#{@flight.arrival_airport.code})" %></dd>
      </div>
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-xs font-medium text-gray-500">Departure Date/Time</dt>
        <dd class="mt-1 text-lg font-semibold tracking-tight text-gray-900"><%= @flight.departure_time.strftime("%m/%d/%Y - %l:%M%p") %></dd>
      </div>
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-xs font-medium text-gray-500">Flight Duration</dt>
        <dd class="mt-1 text-lg font-semibold tracking-tight text-gray-900"><%= "#{@flight.duration/60} hours" %></dd>
      </div>
    </dl>
  </div>
</div>
<%= render 'form' %>
