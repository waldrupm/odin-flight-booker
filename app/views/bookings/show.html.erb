<h1 class="text-xl font-bold text-indigo-900 mb-4">Congrats on Booking Your Flight!</h1>
<div class="divide-y divide-gray-200 overflow-hidden rounded-lg bg-white shadow mb-4">
  <div class="px-4 py-4 sm:px-6">
    <h2 class="text-lg font-semibold text-gray-800">Your Flight</h2>
  </div>
  <div class="px-4 py-4 sm:p-6">
    <dl class="mt-2 grid grid-cols-1 gap-5 md:grid-cols-4">
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-xs font-medium text-gray-500">Departing From</dt>
        <dd class="mt-1 text-lg font-semibold tracking-tight text-gray-900"><%= "#{@booking.flight.departure_airport.city} (#{@booking.flight.departure_airport.code})" %></dd>
      </div>
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-xs font-medium text-gray-500">Arriving To</dt>
        <dd class="mt-1 text-lg font-semibold tracking-tight text-gray-900"><%= "#{@booking.flight.arrival_airport.city} (#{@booking.flight.arrival_airport.code})" %></dd>
      </div>
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-xs font-medium text-gray-500">Departure Date/Time</dt>
        <dd class="mt-1 text-lg font-semibold tracking-tight text-gray-900"><%= @booking.flight.departure_time.strftime("%m/%d/%Y - %l:%M%p") %></dd>
      </div>
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-xs font-medium text-gray-500">Flight Duration</dt>
        <dd class="mt-1 text-lg font-semibold tracking-tight text-gray-900"><%= "#{@booking.flight.duration/60} hours" %></dd>
      </div>
    </dl>
  </div>
</div>
<div class="px-6">
  <div class="mt-6 w-64">
    <div>
      <h2 class="my-2 text-lg font-semibold text-gray-800">Passengers</h2>
    </div>
    <ul role="list" class="-my-5 divide-y divide-gray-200">
      <% @booking.passengers.each do |passenger| %>
        <li class="py-5">
          <div class="relative focus-within:ring-2 focus-within:ring-indigo-500">
            <h3 class="text-sm font-semibold text-gray-800">
              <span class="absolute inset-0" aria-hidden="true"></span>
              <%= passenger.name %>
            </a>
          </h3>
          <p class="mt-1 text-sm text-gray-600 line-clamp-2"><%= passenger.email %></p>
        </div>
      </li>
    <% end %>
  </ul>
  <%= link_to "Back to Flights", root_path, class: "my-4 inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto" %>
</div>
